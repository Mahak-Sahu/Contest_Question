class Solution {
    public int dominantIndices(int[] nums) {

        int n = nums.length;
        int dominantCount = 0;

        // last index cannot be dominant
        for(int i = 0; i < n - 1; i++) {

            double sum = 0;
            int count = 0;

            // calculate right side sum
            for(int j = i + 1; j < n; j++) {
                sum += nums[j];
                count++;
            }

            double avg = sum / count;

            if(nums[i] > avg) {
                dominantCount++;
            }
        }

        return dominantCount;
    }
}
