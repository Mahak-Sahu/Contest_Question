class Solution {

    public int dominantIndices(int[] nums) {

        int n = nums.length;
        int dominantCount = 0;

        // Step 1: calculate total sum
        long totalSum = 0;

        for(int num : nums) {
            totalSum += num;
        }

        // Step 2: check each index
        long rightSum = totalSum;

        // last element cannot be dominant
        for(int i = 0; i < n - 1; i++) {

            // remove current element from right sum
            rightSum -= nums[i];

            int rightCount = n - i - 1;

            // Mathematical comparison:
            // nums[i] > rightSum/rightCount
            // => nums[i] * rightCount > rightSum

            if((long)nums[i] * rightCount > rightSum) {
                dominantCount++;
            }
        }

        return dominantCount;
    }
}
