// Prefix/Suffox Sum
class Solution {
    public int dominantIndices(int[] nums) {
        int n = nums.length;

        long totalSum = 0;

        // calculate total sum
        for(int num : nums){
            totalSum += num;
        }

        int countDominant = 0;
        long rightSum = totalSum;

        for(int i = 0; i < n - 1; i++) {

            rightSum -= nums[i];   // remove current element

            int rightCount = n - i - 1;

            // nums[i] > average(right)
            // nums[i] * rightCount > rightSum

            if((long)nums[i] * rightCount > rightSum){
                countDominant++;
            }
        }

        return countDominant;
    }
}
